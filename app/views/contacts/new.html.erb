<div class="body">
	<div class="container">
		<!-- 　　　フラッシュメッセージ -->
		<%= render partial: "shared/flash" %>
		<!-- 　　　　　　　　　　　　 -->
		<!--     エラーメッセージ     -->
		<%= render "shared/error_messages", model: @contact %>
		<!--                      -->
		<div class="row">
	      <div class="contact-form col-xs-offset-3 col-xs-6">
	            <h2 class="contact-title">- <%= fa_icon "paper-plane-o" %> Contact Form -</h2>
	     		<div class="box-simple">
		            <%= form_with model: @contact,url: contacts_path,local: true do |f| %>
		            <%= f.label "Name", class: "contact-form-label" %><br>
		            <%= f.text_field :name, class: "form-control contact-form-item" %>
		            <%= f.label "Email", class: "contact-form-label" %><br>
		            <%= f.text_field :email, class: "form-control contact-form-item"%>
		            <%= f.label "Content", class: "contact-form-label" %><br>
		            <%= f.text_area :content, class: "form-control contact-form-item" %>
	            	<div class="row">
	            		<div class="col-xs-offset-7">
	            			<%= f.submit "Send Email",class: "send-btn btn btn-success btn-lg"%>
	            		</div>
	            	</div>
	            </div>
	            <% end %>
	        </div>
	      </div>
	</div>
</div>