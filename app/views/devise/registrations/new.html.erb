<div class="body">
  <div class="devise-wrapper container">
    <div class="row">
      <div class="col-xs-offset-2 col-xs-8">
        <h2 class="sign-up-title">- <%= fa_icon "user-plus" %> Sign up -</h2>
          <div class="box-simple">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field col-xs-offset-1">
                <%= f.label :name, class: "registration-label" %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control sign-up-name-form" %>
              </div>
              <div class="country-field col-xs-offset-1 col-xs-11">
                <%= f.label :country, "Your country", class: "registration-label" %><br />
                <div class="row">
                  <div class="country-btn col-xs-offset-1 col-xs-11" data-toggle="buttons">
                    <%= f.radio_button :country, :true %>
                    <i class="country-name"><%= f.label :country, "Philipins" %></i>
                    <%= f.radio_button :country, :false %>
                    <i class="country-name"><%= f.label :country, "Japan" %></i>
                  </div>
                </div>
              </div>
              <div class="field col-xs-offset-1 col-xs-11">
                <%= f.label :email, class: "registration-label" %><br />
                <%= f.email_field :email,autocomplete: "email", class: "form-control sign-up-mail-pass-form" %>
              </div>

              <div class="field col-xs-offset-1 col-xs-11">
                <%= f.label :password, class: "registration-label" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control sign-up-mail-pass-form" %>
              </div>

              <div class="field col-xs-offset-1 col-xs-11">
                <%= f.label :password_confirmation, class: "registration-label" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control sign-up-mail-pass-form" %>
              </div>
              <div class="row">
                <div class="actions col-xs-offset-9">
                  <%= f.submit "Sign up", class: "btn btn-success sign-up-submit" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>