  <div class="mainvisual">
    <header class="header-top">
        <div class="header-logo">
            <%= image_tag 'logo.jpg', alt: "[Logo]whale shark" %>
        </div>
        <nav>
          <ul>
            <div class="nav-list">
              <%= fa_icon "home" %>
              <%= link_to "Top", root_path %>
            </div>
            <div class="nav-list">
              <%= fa_icon "user-plus"%>
              <%= link_to "Sign up", new_user_registration_path %>
