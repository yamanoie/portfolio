<!DOCTYPE html>
<html>
  <head>
    <title>Segurado!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name=”viewport” content=”width=device-width,initial-scale=1.0″>
  </head>

  <header class="header">
    <!-- 　　　　　ロゴ　　　　 -->
    <div class="header-logo">
        <%= image_tag 'logo.jpg', alt: "[Logo]whale shark" %>
    </div>
    <!-- 　　　　　　　　　　　 -->
    <nav>
    <ul>
      <% if user_signed_in? %>
        <div class="nav-list">
            <%= fa_icon "home" %>
            <%= link_to "Home", posts_path , data: {"turbolinks" => false} %>
         </div>

          <div class="nav-list">
            <%= fa_icon "user-circle-o" %>
            <%= link_to "My page",user_path(current_user)%>
         </div>

         <div class="nav-list">
            <%= fa_icon "users" %>
            <%= link_to "Users", users_path %>
          </div>

         <div class="nav-list">
            <%= fa_icon "handshake-o" %>
            <%= link_to "Recruit", matches_path %>
         </div>
         <div class="nav-list">
              <%= fa_icon "paper-plane-o" %>
              <%= link_to "Contact", new_contacts_path %>
            </div>
         <div class="nav-list">
            <%= fa_icon "sign-out" %>
            <%= link_to "Log out", destroy_user_session_path,method: :delete %>
         </div>
       <% else %>
         <div class="nav-list">
            <%= fa_icon "home" %>
            <%= link_to "Top", root_path %>
         </div>
         <div class="nav-list">
            <%= fa_icon "user-plus"%>
            <%= link_to "Sign up", new_user_registration_path %>
          </div>
          <div class="nav-list">
              <%= fa_icon "sign-in"%>
              <%= link_to "Log in", new_user_session_path %>
          </div>
          <div class="nav-list">
              <%= fa_icon "paper-plane-o" %>
              <%= link_to "Contact", new_contacts_path %>
          </div>
        <% end %>
    </ul>
    </nav>
  </header>
  <body>
    <%= yield %>
  </body>
  <footer>
    <p id="page-top"><a href="#"><span class="glyphicon glyphicon-upload" aria-hidden="true"></span></a></p>
      <!-- 　ロゴ　　　 -->
    <div class="row">
      <div class="footer-logo">
        <%= link_to posts_path, data: {"turbolinks" => false} do %>
                 <img src="/assets/logo2.jpg" alt="[Logo]whale shark">
        <% end %>
      </div>
    </div>
    <!--           -->
  </footer>
</html>

