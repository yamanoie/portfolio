<div class="row">
  <div class="like-btn col-xs-offset-9">
    <% if post.liked_by?(current_user) %>
	  <%= link_to post_likes_path(post), method: :delete , remote: true do %>
	    <%= fa_icon "heart", style: "color=: red;" %>
		<%= post.likes.count %>
	  <% end %>
    <% else %>
	  <%= link_to post_likes_path(post), method: :post, remote: true do %>
	    <%= fa_icon "heart-o" %>
		<%= post.likes.count %>
	  <% end %>
    <% end %>
  </div>
</div>