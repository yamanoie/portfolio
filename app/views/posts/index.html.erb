
<div class="body">
	<div class="post-index container">
			<!-- 新規投稿ボタン -->
			<%= link_to new_post_path, data: {"turbolinks" => false} do %>
				<%= image_tag "/assets/logo-post.jpg",class: "logo-post" %>
			<% end %>
			<!-- 　　　　　　　 -->
			<!-- 　　　フラッシュメッセージ -->
				<%= render partial: "shared/flash" %>
			<!-- 　　　　　　　　　　　　 -->
				<!--  パンくずリスト    -->
		<div class="row">
			<div class="col-xs-2">
				<ol class="breadcrumb">
					<li class=" glyphicon glyphicon-home active ">Home</li>
				</ol>
			</div>
		</div>
				<!-- 　  　　　　　　 -->
				<!--   プロフィール -->
		<%= render "shared/simple_profile" %>
				<!-- 　　　　　　　　　 -->

				<!-- 　　　　　スライダー　　　　 -->
		<div class="bxslider">
			<% @slider_posts.each do |post| %>
					<%= link_to post_path(post) do%>
				    <%= attachment_image_tag post, :image %>
					<%= post.user.name %>
		      		<%= fa_icon "heart",style: "color=: red;"%>
		  			<%= post.likes.count %>
				<% end %>
			<% end %>
		</div>
				<!-- 　　　　　　　　　　　 -->
			<!-- ランキング   -->
	<hr>
		<div class="row">
			<div class="col-xs-offset-3 col-xs-5">
			<h2 class="title">- Best 3 -</h2>
				 <% @all_ranks.each.with_index(1) do |post, i| %>
			  <div class="post_content box-design">
				 	<h2  class="rank">
				 		<% if i == 1 then %>
				 		  <img src="/assets/gold.png">
				 		<% elsif i == 2 then %>
				 		  <img src="/assets/silver.png">
				 		<% elsif i == 3 then %>
				 		  <img src="/assets/bronz.png">
				 		<% end %>
				 		Best <%= i%>
				 	</h2>
		 			<%= attachment_image_tag post.user, :image,  fallback: "no-image.jpg", size:"60x60" %>
					<%= link_to user_path(post.user.id) do %>
						<%= post.user.name %>
					<% end %>
					<!--          いいね       -->
					<div class="likes_buttons_<%= post.id %>">
						<%= render partial: "likes/like", locals: {post: post } %>
					</div>
		              	<!-- 　　　　　             -->
			            <%= post.text %>
		              	<!-- コメント数 -->
		              	<%= fa_icon "comment-o" %>
		              	 <%= post.comments.count %> Comments
		              	 <!--       -->
	                    <%= fa_icon "calendar" %>
		              	<%= create_time_with_country(current_user, post) %>
		              	<%= attachment_image_tag post, :image %>
			            <%= link_to "more",post_path(post) %>
			        </div>
		             <% end %>
				</div>
			</div>
			<!--       ランキングここまで     -->

			<!-- 　　　　　　　　　投稿一覧　　　　　　　　 -->
		<hr>
			<div class="margin-container row">
			　　<div class="col-xs-offset-3 col-xs-7">
					<h2 class="title">- Latest posts -</h2>
					<% @posts.each do |post| %>
					<h1></h1>
					<%= attachment_image_tag post.user, :image, fallback: "no-image.jpg", size:"60x60" %>
					<%= link_to user_path(post.user.id) do %>
						<%= post.user.name %>
					<% end %>
					<!--          いいね       -->
					<div id="likes_buttons_<%= post.id %>">
						<%= render partial: "likes/like", locals: {post: post} %>
			  		</div>
	              	<!-- 　　　　　             -->
		            <%= post.text %>
	              	<!-- コメント数 -->
	              	<%= fa_icon "comment-o" %>
	              	 <%= post.comments.count %> Comments
	              	 <!--       -->
                    <%= fa_icon "calendar" %>
		            <%= create_time_with_country(current_user, post) %>
	              	<%= attachment_image_tag post, :image  %>
		            <%= link_to "more",post_path(post) %>
	              	<% end %>
	              	<%= paginate @posts %>
			　　</div>
			</div>
			<!-- 　　投稿一覧ここまで　　　　　　　　　　　　　　　　　　　 -->
		</div>
	</div>
</div>
 <script>

  </script>