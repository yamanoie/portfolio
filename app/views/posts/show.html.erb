<div class="body">
	<div class="container">
		<div class="row">
			<div class="">
					<div class="">
					  <%= attachment_image_tag @post.user, :image, :fill, 60, 60, fallback: "no-image.jpg", size:"60x60" %>
					  <%= link_to user_path(@post) do %>
					  	<%= @post.user.name %>
					  <% end %>
					<!-- 　　　　いいね　　　 -->
					  <% if @post.liked_by?(current_user) %>
						<%= link_to post_likes_path(@post),method: :delete do %>
		              		<%= fa_icon "heart",style: "color=: red;"%>
		              		<%= @post.likes.count %>
		              	<% end %>
		              <% else %>
		            	<%= link_to post_likes_path(@post),method: :post do %>
	              			<%= fa_icon "heart-o"%>
	              			<%= @post.likes.count %>
	              		<% end %>
	              	  <% end %>
	              	<!-- 　　　　　　　 -->
              		  <%= attachment_image_tag @post, :image, :fill, 300, 400 %>
              		  <%= @post.text %>
            		  <%= fa_icon "calendar" %>
              		  <%= @post.created_at.strftime("%Y-%m-%d %H:%M") %>
              		  <% if @post.user_id == current_user.id %>
              		  	<%= link_to "Edit" , edit_post_path(@post), class: "btn btn-primary" %>
              		  <% end %>
					</div>
			</div>
		</div>
	</div>
	<!-- コメント一覧 -->
	<h2> 3 Comments</h2>
	<!-- 　　　　　　 -->
	<!-- コメントフォーム -->
	<h2> Comment Form </h2>
	<!-- 　　　　　　　　 -->
</div>