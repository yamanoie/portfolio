<div class="body">
  <div class="container">
        <%= flash[:notice] %>
    
      <!-- パンくずリスト -->
    <div class="row">
      <div class="col-xs-3">
        <ol class="breadcrumb">
          <li><%= link_to "Home", posts_path,class: "glyphicon glyphicon-home" %></li>
          <li><%= link_to "Users", users_path,class: "glyphicon glyphicon-home" %></li>
          <li class="active">Message</li>
        </ol>
      </div>
    </div>
    <!-- 　　　　　　 -->
    <!--   プロフィール -->
    <%= render "shared/simple_profile" %>
        <!-- 　　　　　　　　　 -->
    <!-- 　　　　ユーザー　　　　　 -->
    <h2 class="title">- Message -</h2>
    <% @entries.each do |e| %>
    <div class="user-name">
        <div>
          <%= attachment_image_tag e.user, :image, :fill, 100, 100,  fallback: "no-image.jpg", size:"100x100" %>
        </div>
        <div>
          <strong>
          <a class="rooms-user-link" href="/users/<%= e.user.id %>">
              <%= e.user.name %>
          </a>
          </strong>
        </div>
      </div>
    <% end %>
    <!-- 　　　　　　　　　　 -->
    <!-- 　　　　メッセージ一覧　　　 -->
    <hr>
    <div class="chats">
         <div class="chat">
            <% if @messages.present? %>
                <% @messages.each do |m| %>
                    <div class="chat-box">
                        <div class="chat-face">
                        <%= attachment_image_tag m.user, :image, :fill, 100, 100, fallback: "no-image.jpg", size:"100x100" %>
                        </div>
                        <%= m.user.name %>
                    <div class="chat-hukidashi"> <strong><%= m.message %></strong> <br>
                    <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
                    </div>
                    <% if m.user.id == current_user.id %>
                        <%= link_to "Delete", message_path(m),method: :delete, data: {confirm: "Are you sure you want to delete it?",cancel:"No",commit:"Yes"},title:"Confirmation", class: "btn btn-danger"%>
                    <% end %>
                    </div>
                <% end %>
            <% end %>
         <%= paginate @messages %>
          </div>
          <!-- 　　　　　　　　 -->
          <!-- 　　　メッセージフォーム　　　　　 -->
          <div class="posts">
            <%= form_with model: @message,local: true do |f| %>
            <%= f.text_field :message, placeholder: "input your message" , size: 70, class:"form-text-field" %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "Send",class: 'form-submit'%>
            <% end %>
          </div>
    </div>
    <!-- 　　　　　　　　 -->
    </div>
  </div>
</div>
