<div class="body">
  <div class="container">
        <%= flash[:notice] %>
      <!-- パンくずリスト -->
    <div class="row">
      <div class="col-xs-3">
        <ol class="breadcrumb">
          <li><%= link_to "Home", posts_path,class: "glyphicon glyphicon-home" %></li>
          <li><%= link_to "Users", users_path,class: "glyphicon glyphicon-home" %></li>
          <li class="active">Message</li>
        </ol>
      </div>
    </div>
    <!-- 　　　　　　 -->
    <!--   プロフィール -->
    <%= render "shared/simple_profile" %>
        <!-- 　　　　　　　　　 -->
    <h2 class="title">- <%= fa_icon "comments-o" %>  Message -</h2>
    <!-- 　　　　ユーザー　　　　　 -->
    <div class="row">
      <div class="col-xs-offset-4">
        <% @entries.each do |e| %>
        <%= attachment_image_tag e.user, :image, :fill, 100, 100,  fallback: "no-image.jpg", size:"100x100", class: "message-user" %>
            <strong>
              <%= link_to e.user.name ,user_path(e.user.id), class: "message-user" %>
            </strong>
    <% end %>

        </div>
    </div>
    <!-- 　　　　　　　　　　 -->
       <!-- 　　　メッセージフォーム　　　　　 -->
      <hr>
      <div class="row">
        <div class="form-group col-xs-offset-4 col-xs-4">
          <h4 class="message-form-title">- Message Form -</h4>
          <%= form_with model: @message,local: true do |f| %>
          <%= f.text_area :message, placeholder: "Input your message" , col: "50", class:"form-control" %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <div class="row">
            <div class="chat-btn col-xs-offset-9">
              <%= f.submit "Send",class: 'btn btn-success'%>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    <!-- 　　　　　　　　 -->
    </div>
    <!-- 　　　　メッセージ一覧　　　 -->
    <hr>
    <div class="row">
         <div class="col-xs-offset-3 col-xs-6">
            <% if @messages.present? %>
                <% @messages.each do |m| %>
                    <div class="row">
                      <% if m.user.id == current_user.id %>
                        <div class="box-design">
                      <% else %>
                        <div class="box-design-message">
                      <% end %>
                    <div class="row">
                      <div class="col-xs-offset-1">
                        <%= attachment_image_tag m.user, :image, :fill, 60, 60, fallback: "no-image.jpg", size:"60x60" %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-offset-1 col-xs-3">
                            <%= m.user.name %>
                      </div>
                    </div>
                    <div class="row">
                      <% if m.user.id == current_user.id %>
                        <div class="chat box-design col-xs-offset-2">
                      <% else %>
                        <div class="chat box-design-message col-xs-offset-2">
                      <% end %>
                          <strong><%= m.message %></strong>
                      </div><br>
                    </div>
                    <div class="row">
                      <div class="col-xs-offset-8">
                        <%= fa_icon "calendar" %>
                        <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
                      </div>
                    </div>
                    <div class="row">
                      <div class="chat-btn col-xs-offset-10">
                        <% if m.user.id == current_user.id %>
                         <%= link_to "Delete", message_path(m),method: :delete, data: {confirm: "Are you sure you want to delete it?",cancel:"No",commit:"Yes"},title:"Confirmation", class: "btn btn-danger btn-xs"%>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>
            <% end %>
            <%= paginate @messages %>
          </div>
        </div>
      </div>
          <!-- 　　　　　　　　                -->
  </div>
</div>
