<% visitor = notification.visitor %>
<% visited = notification.visited %>

<span>
	<%= link_to user_path(visitor) do %>
		<%= attachment_image_tag visitor, :image, fallback: "no-image.jpg", size: "100x100" %>
		<strong><%= visitor.name %></strong>
	<% end %>
		<% case notification.action %>
		<% when "like" then %>
			<%= link_to "your post", notification.post %>
			"liked"
</span>
		<% when "comment" then %>
		<% if notification.post.user_id == visited.id %>
			<%= link_to "your post", notification.post%>
		<% else %>
			<span>
			<%= link_to post_path(notification.post) do %>
			<%= attachment_image_tag notification.post.user, :image, fallback: "no-image.jpg", size: "100x100" %>
			<strong>
				"commented"
				<%= notification.post.user.name + "`s post" %>
			</strong>
			<% Comment.find_by(id: notification.comment_id)&.commentsmall %>
			</span>
			<!-- メッセージ通知 -->

		<% end %>
		<% end %>
		.small.text-muted.text-right
		<%= time_ago_in_words(notification.created_at).upcase %>
		<hr>
		<% end %>