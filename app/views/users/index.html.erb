<div class="body">
  <div class="container">
		<!-- --------------- パンくずリスト ---------------  -->
    <div class="row">
	  <div class="col-xs-3">
	    <ol class="breadcrumb">
		  <li><%= link_to "Home", posts_path, data: { "turbolinks" => false }, class: "glyphicon glyphicon-home" %></li>
		  <li class="active">Users</li>
		</ol>
	  </div>
	</div>
		<!-- ---------------------------------------------  -->
		<!----------------   プロフィール ---------------------->
	<%= render "shared/simple_profile" %>
		<!----------------------------------------------------->
	<div class="row">
	  <div class="col-xs-offset-2 col-xs-8">
	    <div class="title-wrapper">
		  <h2 class="users-title"><%= fa_icon "users" %>  All Users</h2>
		</div>
		<table class="table table-hover">
		  <thead>
	        <tr>
			  <th class="text-center"></th>
			  <th class="text-center">Name</th>
			  <th class="text-center">Country</th>
			  <th class="text-center">All Likes</th>
			  <th class="text-center">Last Login</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @users.each do |user| %>
		      <tr>
			    <td class="text-center" style="vertical-align: middle;">
				  <%= attachment_image_tag user, :image, fallback: "no-image.jpg", size:"60x60", id: "round-user-image" %>
				</td>
				<td class="text-center" style="vertical-align: middle;">
	        	  <%= link_to user_path(user) do %>
				    <%= user.name %>
				  <% end %>
				</td>
				<td class="text-center" style="vertical-align: middle;">
				  <% if user.country == true %>
					Philipins
				  <% else %>
					Japan
				  <% end %>
				</td>
				<td class="text-center" style="vertical-align: middle;">
				  <%= user.like_sum %>
				</td>
				<td class="text-center" style="vertical-align: middle;">
				  <%= user.current_sign_in_at.strftime("%Y-%m-%d %H:%M") %>
				</td>
			  </tr>
			<% end %>
			<%= paginate @users %>
		  </tbody>
		</table>
	  </div>
    </div>
  </div>
</div>