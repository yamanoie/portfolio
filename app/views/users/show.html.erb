<div class="body">
	<div class="container">
		<!-- パンくずリスト -->
		<div class="row">
			<div class="col-xs-3">
				<ol class="breadcrumb">
					<li><%= link_to "Home", posts_path,class: "glyphicon glyphicon-home" %></li>
					<li class="active">My page</li>
				</ol>
			</div>
		</div>
		<!-- 　　　　　　 -->
		<!--   簡易プロフィール -->
		<% unless current_user.id == @user.id%>
			<%= render "shared/simple_profile" %>
		<% end %>
		<!-- 　　　　　　　 -->

		<!--     メッセージアイコン -->

		<% unless @user.id == current_user.id %>
			<% if @room %>
				<%= link_to room_path(@room) do %>
					<%= fa_icon "envelope 3x" %>
				<% end %>
			<% else %>
				<%= link_to rooms_path(@roomId, room: { guest_id: @user.id}), method: :post do %>
					<%= fa_icon "envelope-o 3x" %>
				<% end %>
			<% end %>
		<% end %>
		<!-- 　　　　　　　　　　 -->
		<!--        プロフィール　　　　 -->
		<div class="margin-container row">
			<div class="col-xs-offset-3 col-xs-5">
				<h2 class="title"><%= @user.name%>`s Profile </h2>
				  <%= attachment_image_tag @user, :image, :fill, 120, 120, fallback: "no-image.jpg", size:"120x120" %>
				 [Name]
				  <%= @user.name %>
				  [Country]
				  <% if @user.country == true %>
				  	Philipins
				  <% else %>
				  	Japan
				  <% end %>
				  [Profile]
				  <% if @user.profile == nil %>
				  	 [no self-introduction]
				  <% else %>
	      		  	<%= @user.profile %>
	      		  	<% end %>
	      		  <% if @user.id == current_user.id %>
	      		  	<%= link_to "Edit" , edit_user_path(current_user), class: "btn btn-primary" %>
	      		  <% end %>
			</div>
		</div>
		<!-- 　　　　プロフィール　　ここまで　　 -->
		<!-- 通知一覧 -->
		<% if current_user.id == @user.id%>
			<hr>
			<div class="margin-container row">
				<div class="col-xs-offset-3">
					<h2>Notification</h2>
					<% notifications = @notifications.where.not(visitor_id: current_user.id) %>
					<% if notifications.exists? %>
						<% @notifications.each do |notification| %>
							<%= render "shared/notifications", notification: notification %>
						<% end %>
						<%= paginate notifications %>
					<% else %>
						<p>No notifications</p>
					<% end %>
				</div>
			</div>
		<% end %>
		<!--    　　　　 -->
		<!--         投稿一覧         -->
		<hr>
		<div class="margin-container　row">
			<div class=" col-xs-offset-3">
				<h2>- <%= @user.name %>`s All Posts -</h2>
				  <% @posts.each do |post| %>
				  <!-- 　　　　　　いいね　　　　　 -->
					<div id="likes_buttons_<%= post.id %>">
						<%= render partial: "likes/like", locals: {post: post} %>
			  		</div>
			       <!-- 　　　　　　　　　 -->
		            <%= attachment_image_tag post, :image, :fill, 300, 400 %>
		            <%= post.text %>
		            <%= fa_icon "calendar" %>
		            <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
		            <%= link_to "more",post_path(post) %>
		            <% if post.user_id == current_user.id %>
		                <%= link_to "Edit" , edit_post_path(post), class: "btn btn-success" %>
		            <% end %>
                  <% end %>
	             <%= paginate @posts %>
		    </div>
	    </div>
		<!-- 　　　    投稿一覧　ここまで　 -->
		<!--       マッチング投稿一覧        -->
		<hr>
		<div class="margin-container row">
			<div class="col-xs-offset-3">
				<h2>- <%= @user.name %>`s Recruit posts -</h2>
				 <% @matches.each do |match| %>
					 <% if match.nil? %>
					 	There is no Recruite post
					 <% else %>
					 	<% if match.occupation == true %>
							<%= fa_icon "users" %>
							<p>Search Students</p>
						<% else %>
							<%= fa_icon "graduation-cap" %>
							<p>Search Teachers</p>
						<% end %>
					 	<%= match.title %>
					 	<%= match.text %>
					 	<%= match.created_at.strftime("%Y-%m-%d %H:%M") %>
					 <% end %>
					 <% if match.user.id == current_user.id %>
							<%= link_to "Edit", edit_match_path(match),class: "btn btn-success" %>
					 <% end %>
				 <% end %>
	            <%= paginate @matches %>
		    </div>
	    </div>
	    <!-- 　　　　　　　　　　　　       　 -->
   </div>
</div>